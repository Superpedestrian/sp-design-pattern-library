<footer class="c-footer large-padding-top small-padding-bottom" role="contentinfo">

  <div class="container-fluid footer-section">
    <div class="col-sm-6 c-footer-col">
      {{> molecules-footer-links }}
    </div>
    <div class="col-sm-6 c-footer-col">
      {{> molecules-footer-form}}
      {{> molecules-footer-social }}
      {{> molecules-footer-apps }}
      {{> molecules-footer-privacy }}
    </div>
  </div>

  <div class="c-footer__copyright large-margin-top">
    <div class="container-fluid footer-section">
      <div class="col-sm-6 c-footer-col">
        <div class="col-sm-6">
          <a class="c-footer-nav__link" href="{{ footerNav.properties.terms_conditions.url }}">{{ footerNav.properties.terms_conditions.label }}</a>
        </div>
        <div class="col-sm-6">
          <a class="c-footer-nav__link" href="{{ footerNav.properties.privacy_policy.url }}">{{ footerNav.properties.privacy_policy.label }}</a>
        </div>
      </div>

      <div class="col-sm-6">
        <p>{{ copyright }}</p>
      </div>
    </div>
  </div>

</footer><!-- end c-footer -->